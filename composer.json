{
  "name": "renekorss/banklink",
  "description": "PHP banklink library to easily integrate Baltic banklinks.",
  "keywords": ["banklink", "pangalink", "baltic banklinks", "payments", "nets", "seb", "swedbank",
    "nordea", "lhv", "danskebank", "liisi", "cooppank", "luminor", "pocopay"],
  "license": "MIT",
  "authors": [
    {
      "name": "Rene Korss",
      "email": "rene.korss@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.1",
    "ext-mbstring": "*",
    "lib-openssl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "7.*",
    "squizlabs/php_codesniffer": "3.*",
    "phpmd/phpmd" : "2.*",
    "phpdocumentor/phpdocumentor": "2.*",
    "php-coveralls/php-coveralls": "2.*"
  },
  "autoload": {
    "psr-4": {
      "RKD\\Banklink\\": "src",
      "RKD\\BanklinkTests\\": "tests"
    }
  },
  "scripts": {
    "tests": "phpunit",
    "docs": "phpdoc -d ./src -t ./docs --template=responsive-twig",
    "phpmd": "phpmd ./src text phpmd.xml",
    "phpcs": "phpcs --report=full --extensions=php -p --standard=phpcs.xml ./src ./tests"
  }
}
